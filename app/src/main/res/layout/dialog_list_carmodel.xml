<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_padding_50dp"
    android:paddingLeft="@dimen/margin_padding_30dp"
    android:paddingRight="@dimen/margin_padding_30dp"
    android:paddingTop="@dimen/margin_padding_50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_gray_corner_zhi_bg"
                android:gravity="left|center_vertical"
                android:hint="输入关键字查询"
                android:paddingLeft="@dimen/margin_padding_10dp"
                android:textColor="@color/tv_333"
                android:textColorHint="@color/tv_999"
                android:textSize="@dimen/font_16sp" />

            <Button
                android:id="@+id/btn_serach"
                android:layout_width="@dimen/margin_padding_60dp"
                android:layout_height="match_parent"
                android:background="@color/color_blue"
                android:text="搜索"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_blue"
            android:gravity="center"
            android:text="选择车型名称"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_padding_45dp"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</LinearLayout>