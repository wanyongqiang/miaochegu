<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorcccccc"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="任务单号：201530303876"
                android:textColor="@color/color_blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_chakan"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="@drawable/shape_no_corner"
                android:gravity="center"
                android:text="查看报告"
                android:textColor="@color/tv_333"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:padding="15dp"
            android:paddingLeft="15dp"
            android:text="2017款 240TURBO 自动四驱豪华版"
            android:textColor="@color/tv_333"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="15dp"
                android:paddingLeft="15dp"
                android:text="2017-07-07 12:12:12"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_fs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:padding="15dp"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="#999999"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/alert_lines"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_wtg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="未过原因："
                android:textColor="@color/tv_999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_why"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_no_corner"
                android:gravity="center"
                android:text="车辆未查到"
                android:textColor="@color/tv_999"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
