<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colore5e5e5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/color_blue"
            android:paddingRight="15dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_marginTop="23dp"
                android:paddingBottom="10dp"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="10dp"
                android:src="@mipmap/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="33dp"
                android:text="车辆详情"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_padding_45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_padding_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未过原因："
                android:textColor="@color/tv_666"
                android:textSize="@dimen/font_14sp" />

            <TextView
                android:id="@+id/tv_because"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无"
                android:textColor="@color/tv_666"
                android:textSize="@dimen/font_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_padding_45dp"
            android:layout_marginTop="@dimen/margin_padding_15dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_padding_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务单号："
                android:textColor="@color/tv_333"
                android:textSize="@dimen/font_14sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201710291938918"
                android:textColor="@color/tv_333"
                android:textSize="@dimen/font_14sp" />
        </LinearLayout>

        <include layout="@layout/layout_line_common" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_padding_45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_padding_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交时间："
                android:textColor="@color/tv_333"
                android:textSize="@dimen/font_14sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-04-05 10:21:46"
                android:textColor="@color/tv_333"
                android:textSize="@dimen/font_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_padding_45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_padding_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核状态："
                android:textColor="@color/tv_333"
                android:textSize="@dimen/font_14sp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="初审未过"
                android:textColor="@color/tv_9465a"
                android:textSize="@dimen/font_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="top"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_padding_15dp"
            android:paddingTop="@dimen/margin_padding_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆信息："
                android:textColor="@color/tv_333"
                android:textSize="@dimen/font_14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_cartype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_padding_15dp"
                    android:text="奥迪A6-1.8T-MT基本型(国ll)"
                    android:textColor="@color/tv_333"
                    android:textSize="@dimen/font_14sp" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_padding_15dp"
                    android:layout_marginTop="@dimen/margin_padding_2dp"
                    android:text="北京"
                    android:textColor="@color/tv_333"
                    android:textSize="@dimen/font_14sp" />

                <TextView
                    android:id="@+id/tv_vin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_padding_15dp"
                    android:layout_marginTop="@dimen/margin_padding_2dp"
                    android:text="LKTRGY7787JJI89H55"
                    android:textColor="@color/tv_333"
                    android:textSize="@dimen/font_14sp" />

                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_padding_15dp"
                    android:layout_marginTop="@dimen/margin_padding_2dp"
                    android:text="2017-07-06   非运营"
                    android:textColor="@color/tv_333"
                    android:textSize="@dimen/font_14sp" />

                <TextView
                    android:id="@+id/tv_km_and_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_padding_15dp"
                    android:layout_marginTop="@dimen/margin_padding_2dp"
                    android:text="10.00万公里  56.00万元成交"
                    android:textColor="@color/tv_333"
                    android:textSize="@dimen/font_14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_padding_45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_padding_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注信息："
                android:textColor="@color/tv_666"
                android:textSize="@dimen/font_14sp" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无"
                android:textColor="@color/tv_666"
                android:textSize="@dimen/font_14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding_45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="放弃"
            android:textColor="@color/tv_666"
            android:textSize="@dimen/font_14sp" />

        <View
            android:layout_width="@dimen/margin_padding_0dp"
            android:layout_height="match_parent"
            android:background="@color/color_view_line" />

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="修改"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/font_14sp" />

    </LinearLayout>
</RelativeLayout>
